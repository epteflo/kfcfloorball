<!DOCTYPE html>
<html>
<head>
    <title>KfcFloorball</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
</head>
<body>

<%= render 'shared/menu' %>

<div id="content">

    <% flash.each do |name, msg| %>
        <% unless name.to_s.eql? "timedout" %>
            <div id="<%= name %>" class="alert <% if name.to_s == 'notice'%>alert-success<% else %>alert-error<% end %>">
                <a class="close" data-dismiss="alert">..</a>
                <%= msg %>
            </div>
        <% end %>
    <% end %>

    <%= yield %>

</div>

<%= render 'shared/footer' %>

</body>
</html>