<div class="row">
  <div class="col-md-3">
    <div>
      <label>Helyszín:</label>
      {{venue}}
    </div>
    <div>
      <label>Időpont</label>
      {{day matchDate}}
    </div>

  </div>
  <div class="col-md-9">
    {{#link-to 'match' this.id tagName='div' class='row'}}
      <div class="match-result clearfix">
        <div class="col-xs-4 col-md-push-1 team white">Fehér</div>
        <div class="col-xs-2 score white text-right">{{aScore}}</div>
        <div class="col-xs-2 score black">{{bScore}}</div>
        <div class="col-xs-4 col-md-pull-1 text-right team black">Fekete</div>
      </div>
    {{/link-to}}

    <div class="row teams">
      <div class="col-md-6 col-md-push-2">
        <ul class="">
          {{#each teamA}}
            <li>{{this.user.name}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="col-md-6">
        <ul class="">
          {{#each teamB}}
            <li>{{this.user.name}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

