<div class="row">
  <div class="col-md-4 col-md-offset-4">

    {{#if errorMessages}}
      <div class="alert-danger alert">
        {{#each errorMessages}}
          <div>{{this}}</div>
        {{/each}}
      </div>
    {{/if}}

    <form role="form">
      <div class="form-group">
        <label for="formName">Név</label>
        {{input type='text' class="form-control" value=name id='formName' placeholder='Hogy hívnak?'}}
      </div>
      <div class="form-group">
        <label for="formEmail">E-mail</label>
        {{input type='text' class="form-control" value=email id='formEmail' placeholder='Ide kapsz levelet'}}
      </div>
      <div class="form-group">
        <label for="formPassword">Jelszó</label>
        {{input type='password' class="form-control" value=password id='formPassword' placeholder='Minimum 6 karakter.'}}
      </div>
      <div class="form-group">
        <label for="formPasswordConfirmation">Jelszó mégegyszer</label>
        {{input type='password' class="form-control" value=passwordConfirmation id='formPasswordConfirmation' placeholder='One more time.'}}
      </div>
      <button {{action save}} class='btn'>Submit</button>
    </form>
  </div>
</div>
