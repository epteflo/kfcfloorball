<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <form role="form">
      <div class="form-group">
        <label for="formLogin">Login</label>
        {{input type='text' class="form-control" value=login id='formLogin' placeholder='Login név'}}
      </div>
      <div class="form-group">
        <label for="formNickname">Becenév</label>
        {{input type='text' class="form-control" value=nickname id='formNickname' placeholder='Így jelensz meg többnyire'}}
      </div>
      <div class="form-group">
        <label for="formEmail">E-mail</label>
        {{input type='text' class="form-control" value=email id='formEmail' placeholder='Ide kapsz levelet'}}
      </div>
      <div class="form-group">
        <label for="formName">Teljes neved</label>
        {{input type='text' class="form-control" value=name id='formName' placeholder='...'}}
      </div>
      <button {{action save}} class='btn'>Submit</button>
    </form>
  </div>
</div>
